@model MvcFirmaCagri.Models.Entity.TblFirmalar
@{
    ViewBag.Title = "ProfilDuzenle";
    Layout = "~/Views/Shared/FirmaLayout.cshtml";
}

<h2>Firma Profil Düzenleme Sayfası</h2>
<br />
@using (Html.BeginForm("ProfilGuncelle", "Default", FormMethod.Post))
{
    <br />
    @Html.HiddenFor(x => x.ID)
    @Html.Label("FirmaAdi")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Yetkili")
    @Html.TextBoxFor(x => x.Yetkili, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Sifre")
    @Html.PasswordFor(x => x.Sifre, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Sektör")
    @Html.TextBoxFor(x => x.Sektor, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.ID)
    @Html.Label("İl")
    @Html.TextBoxFor(x => x.il, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.ID)
    @Html.Label("İlçe")
    @Html.TextAreaFor(x => x.ilce, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Adres")
    @Html.TextAreaFor(x => x.Adres, 10, 4, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Değişiklikleri Kaydet</button>
}

